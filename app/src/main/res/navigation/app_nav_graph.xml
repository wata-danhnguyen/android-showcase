<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_nav_graph"
    app:startDestination="@id/fragmentClient">

    <fragment
        android:id="@+id/fragmentClient"
        android:name="com.igorwojda.showcase.app.presentation.home.HomeFragment" />

    <include-dynamic
        android:id="@+id/featureClientNavGraph"
        app:graphResName="feature_client_nav_graph"
        app:moduleName="feature_client" />

    <include-dynamic
        android:id="@+id/documentClientNavGraph"
        app:graphResName="feature_document_nav_graph"
        app:moduleName="feature_document" />

    <include-dynamic
        android:id="@+id/featureServiceNavGraph"
        app:graphResName="feature_service_nav_graph"
        app:moduleName="feature_service" />

    <include-dynamic
        android:id="@+id/serviceHailNavGraph"
        app:graphResName="feature_hail_nav_graph"
        app:moduleName="feature_hail" />

    <include-dynamic
        android:id="@+id/servicePartNavGraph"
        app:graphResName="feature_part_nav_graph"
        app:moduleName="feature_part" />

    <include-dynamic
        android:id="@+id/servicePdrNavGraph"
        app:graphResName="feature_pdr_nav_graph"
        app:moduleName="feature_pdr" />

    <include-dynamic
        android:id="@+id/serviceRiiiNavGraph"
        app:graphResName="feature_rrri_nav_graph"
        app:moduleName="feature_rrri" />

    <action
        android:id="@+id/action_global_client_flow"
        app:destination="@id/featureClientNavGraph"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim" />

    <action
        android:id="@+id/action_global_document_flow"
        app:destination="@id/documentClientNavGraph"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim" />

    <action
        android:id="@+id/action_global_service_flow"
        app:destination="@id/featureServiceNavGraph"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim" />

    <action
        android:id="@+id/action_global_hail_flow"
        app:destination="@id/serviceHailNavGraph"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim" />

    <action
        android:id="@+id/action_global_part_flow"
        app:destination="@id/servicePartNavGraph"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim" />

    <action
        android:id="@+id/action_global_pdr_flow"
        app:destination="@id/servicePdrNavGraph"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim" />

    <action
        android:id="@+id/action_global_rrri_flow"
        app:destination="@id/serviceRiiiNavGraph"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim" />

</navigation>