<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/commonLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/underConstructionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Home fragment"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/underConstructionAnimation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/underConstructionTextView"
        app:lottie_autoPlay="true"
        app:lottie_fileName="lottie_building_screen.json" />

    <Button
        android:id="@+id/btnToDocument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Document" />

    <Button
        android:id="@+id/btnToTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Test DeepLink" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To C" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To D" />


</LinearLayout>
